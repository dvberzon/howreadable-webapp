<h1>Test Cases</h1>
<%= render 'nav' %>
<h2><%= @test_case.name %></h2>
<h3>Exercises</h3>
<% @test_case.exercises.each do |exercise| %>
  <hr />
  <h4><%= exercise.id %></h4>
  <ul class="snippets">
  <% @test_case.patterns.each do |pattern| %>
    <% snippet = Snippet.new @test_case.id, exercise.id, pattern, 'js' %>
    <li><pre><code class="language-javascript" lang="javascript"><%= snippet.text %></code></pre></li>
  <% end %>
  </ul>
  <h5>Answers:</h5>
  <ul class="list-inline">
    <% exercise.answers.each do |answer| %>
    <% correct = answer == exercise.correct_answer %>
    <li class="lead">
      <span class="label label-<%= correct ? 'success' : 'default' %>">
        <%= answer %>
        <% if correct %>✔︎<% end %>
      </span>
    </li>
    <% end %>
  </ul>
<% end %>