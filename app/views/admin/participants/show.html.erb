<p>
  <%= link_to 'Participants', admin_participants_path, :class=>'btn btn-primary' %>
  <%= link_to 'Responses', admin_responses_path, :class=>'btn' %>
  <%= link_to 'Randomisations', admin_randomisations_path, :class=>'btn' %>
</p>

<h1>Participant - <%= @participant.id %></h1>


<ul class="list-inline">
  <li><strong>ID:</strong> <span class="text-info"><%= @participant.id %></span></li>
  <li><strong>Name:</strong> <span class="text-info"><%= @participant.name %></span></li>
  <li><strong>Can contact:</strong> <span class="text-info"><%= @participant.can_contact %></span></li>
  <li><strong>Contact:</strong> <span class="text-info"><%= @participant.contact %></span></li>
  <li><strong>Main language:</strong> <span class="text-info"><%= @participant.main_language %></span></li>
  <li><strong>Years programming:</strong> <span class="text-info"><%= @participant.years_programming %></span></li>
  <li><strong>Language choice:</strong> <span class="text-info"><%= @participant.language_choice %></span></li>
        
</ul>

<table class="table">
  <thead>
    <tr>
      <th>Test case</th>
      <th>Example</th>
      <th>Responded ms</th>
      <th>Given answer</th>
      <th>Readable score</th>
      <th>Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @participant.responses.each do |response| %>
      <tr>
        <td><%= response.test_case %></td>
        <td><%= response.example %></td>
        <td><%= response.responded_ms %></td>
        <td><%= response.given_answer %> <% if response.correct? %>&#10003;<% end %></td>
        <td><%= response.readable_score %></td>
        <td><%= response.comments %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p class="align-right"><%= link_to 'Delete', [:admin,@participant], method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger' %></p>